{
  "name": "@less-platform/wasm",
  "version": "0.1.0",
  "description": "WASM-powered crypto, auth, discovery, and sync primitives for the Less platform",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./auth": {
      "import": "./src/auth/index.ts",
      "types": "./src/auth/index.ts"
    },
    "./auth/react": {
      "import": "./src/auth/react.ts",
      "types": "./src/auth/react.ts"
    },
    "./auth/internals": {
      "import": "./src/auth/internals.ts",
      "types": "./src/auth/internals.ts"
    },
    "./crypto": {
      "import": "./src/crypto/index.ts",
      "types": "./src/crypto/index.ts"
    },
    "./crypto/internals": {
      "import": "./src/crypto/internals.ts",
      "types": "./src/crypto/internals.ts"
    },
    "./discovery": {
      "import": "./src/discovery/index.ts",
      "types": "./src/discovery/index.ts"
    },
    "./sync": {
      "import": "./src/sync/index.ts",
      "types": "./src/sync/index.ts"
    },
    "./sync/react": {
      "import": "./src/sync/react.ts",
      "types": "./src/sync/react.ts"
    },
    "./sync/protocol": {
      "import": "./src/sync/protocol.ts",
      "types": "./src/sync/protocol.ts"
    }
  },
  "license": "MIT",
  "scripts": {
    "build:wasm": "wasm-pack build --target bundler ..",
    "build:ts": "tsc --project tsconfig.json",
    "build": "pnpm build:wasm && pnpm build:ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:browser": "vitest run --passWithNoTests --config vitest.browser.config.ts",
    "bench": "vitest bench --config vitest.bench.config.ts",
    "format": "prettier --write .",
    "check": "prettier --write . && pnpm typecheck && pnpm test && pnpm test:browser"
  },
  "peerDependencies": {
    "@less-platform/db": "^0.1.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@less-platform/db": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "cborg": "^4.5.8",
    "json-joy": "^17.67.0"
  },
  "devDependencies": {
    "@less-platform/db": "link:../../../../less-db-rs/crates/less-db-wasm/js",
    "@types/react": "^19.2.14",
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "typescript": "^5.9.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^4.0.18"
  }
}
